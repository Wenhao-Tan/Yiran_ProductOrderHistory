<?xml version="1.0" ?>
<layout version="0.1.0">
    <catalog_product_view>
        <reference name="product.info">
            <block type="productorderhistory/history" name="product.orderhistory" template="productorderhistory/history.phtml" />
            <block type="productorderhistory/history" name="product.soldquantity" template="productorderhistory/sold_quantity.phtml" />

            <block type="productorderhistory/history" name="product.orderhistory" template="productorderhistory/history.phtml">
                <action method="addToParentGroup"><group>detailed_info</group></action>
                <action method="setTitle" translate="title"><title>Transaction History</title></action>
            </block>
        </reference>
    </catalog_product_view>
</layout>